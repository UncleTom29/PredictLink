{
  "name": "predictlink-backend",
  "version": "0.1.0",
  "description": "PredictLink Oracle Backend: AI Proposer, Evidence Handler, Dispute Bot",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@langchain/core": "^0.2.16",
    "@langchain/openai": "^0.2.6",
    "@solana/web3.js": "^1.95.3",
    "arweave": "^1.15.5",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.5.0",
    "joi": "^17.13.3",
    "js-sha256": "^0.9.0",
    "morgan": "^1.10.0",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/js-sha256": "^0.9.3",
    "@types/node": "^22.7.4",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.6",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.d.ts"],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": ["text", "lcov"]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}